
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_big_margin"
android:paddingRight="@dimen/activity_big_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
android:orientation="vertical"
android:gravity="center_horizontal"
android:background="@drawable/bg_image_test"

tools:context="com.example.antonnazareth.keeper.UserTeamViewActivity">

<View
    android:layout_width="0dp"
    android:layout_height="5dp"
    android:layout_weight="2.5"/>

<Button
    android:id="@+id/viewUsers"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:text="VIEW EXISTING USERS"
    android:tag="Fooz"
    android:layout_weight="0.65"/>

<View
    android:layout_width="0dp"
    android:layout_height="5dp"
    android:layout_weight="0.1"/>

<Button
    android:id="@+id/addNewUser"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:text="ADD NEW USER"
    android:tag="add new user"
    android:layout_weight="0.65"/>

<View
    android:layout_width="0dp"
    android:layout_height="5dp"
    android:layout_weight="0.1"/>

<Button
    android:id="@+id/viewTeams"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:text="VIEW EXISTING TEAMS"
    android:tag="Generic"
    android:layout_weight="0.65"
    style="@style/alt_button"/>

<View
    android:layout_width="0dp"
    android:layout_height="5dp"
    android:layout_weight="0.1"/>

<Button
    android:id="@+id/addNewTeam"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:text="ADD NEW TEAM"
    android:tag="Generic"
    style="@style/alt_button"
    android:layout_weight="0.65"
    />

<View
    android:layout_width="0dp"
    android:layout_height="5dp"
    android:layout_weight="2.5"/>

</LinearLayout>
