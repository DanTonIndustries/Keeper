<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_image_test"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.antonnazareth.keeper.AddUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="1">

        <TextView android:text="FIRST NAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enter_first_name"
            android:text=""
            android:layout_weight="1"
            android:singleLine="true"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="1">

        <TextView android:text="LAST NAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enter_last_name"
            android:text=""
            android:layout_weight="1"
            android:singleLine="true"
            android:gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="1">

        <TextView android:text="NICKNAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enter_nickname"
            android:text=""
            android:layout_weight="1"
            android:singleLine="true"
            android:gravity="center"/>

    </LinearLayout>


    <View
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_weight="0.1"/>

    <Button
        android:id="@+id/button20"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="OK"
        android:layout_weight="1"/>

        <Button
        android:id="@+id/clearDb"
        style="@style/button"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Clear DB For Testing"
        android:layout_weight="1"/>
</LinearLayout>