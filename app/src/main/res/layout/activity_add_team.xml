<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.antonnazareth.keeper.AddTeam">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="0.2">

        <TextView android:text="Team Name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/teamNameEditTxt"
            android:text=""
            android:layout_weight="1"
            android:singleLine="true"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:gravity="center"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.03"/>

    <ListView
        android:id="@+id/list_view_team_users"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="0.8">
    </ListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_weight="0.4">

        <Button
            android:id="@+id/addUserToTeam"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Add User"
            android:layout_weight="1"/>

        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="0.1"/>

        <Button
            android:id="@+id/confirmTeam"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Confirm Team"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>